<p id="notice"><%= notice %></p>

<h1>Totals</h1>

<table>
  <thead>
    <tr>
      <th>Inflow</th>
      <th>Outflow</th>
      <th>Balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @totals.each do |total| %>
      <tr>
        <td><%= total.inflow %></td>
        <td><%= total.outflow %></td>
        <td><%= total.balance %></td>
        <td><%= link_to 'Show', total %></td>
        <td><%= link_to 'Edit', edit_total_path(total) %></td>
        <td><%= link_to 'Destroy', total, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

